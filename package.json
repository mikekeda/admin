{
  "name": "sass-compiler",
  "version": "0.0.1",
  "description": "compile sass",
  "main": "sass-compiller.js",
  "watches": {
    "sass": "sass/**"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:css": "sass sass/style.scss static/css/style.css -s compressed",
    "build:postcss": "postcss -wr static/css/ autoprefixer -b 'last 2 versions'",
    "start": "npm run build:css && npm run build:postcss"
  },
  "keywords": [
    "sass"
  ],
  "author": "Mike",
  "license": "BSD-2-Clause",
  "dependencies": {
    "autoprefixer": "^9.8.8",
    "postcss-cli": "^6.1.3",
    "sass": "^1.97.3"
  }
}
